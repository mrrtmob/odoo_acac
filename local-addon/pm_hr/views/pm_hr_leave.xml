<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="pm_inherit_hr_leave_form" model="ir.ui.view">
            <field name="name">pm.inherit.hr.leave</field>
            <field name="model">hr.leave</field>
            <field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="before">
                     <div class="row" name="description">
                        <label class="col-2 mr-0" for="is_special_leave"/>
                        <field name="is_special_leave" attrs="{'readonly': [('state', 'not in', ('draft', 'confirm'))]}" class="col-9 pl-0" nolabel="1"/>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
