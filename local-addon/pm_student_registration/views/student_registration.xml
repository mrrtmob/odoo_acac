<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

       <template id="student_registration">
           <title>Student Registration</title>
           <t t-call="web.html_container">
                <div class="page py-5" style="font-family:'Roboto';">
                    <style>
                        .container {
                            max-width: 800px !important;
                        }
                        .text-primary {
                            color: #ac9969 !important;
                            font-family: 'Montserrat' !important;
                        }
                        .bg-primary {
                            background: #ac9969 !important;
                        }
                        .btn {
                            font-size: 15px !important;
                            color: white !important;
                            padding: 0.8rem 4rem !important;
                            border-radius: 10px !important;
                            font-weight: 600 !important;
                            background-color: #ac9969 !important;
                            border-color: #ac9969 !important;
                            transition: 0.3s;
                        }
                        .btn:hover {
                            background-color: #948151 !important;
                            transition: 0.3s;
                        }
                        .border-title {
                            width: 100%;
                            height: 1px;
                            background: #ac9969;
                            margin-top: 15px;
                            margin-bottom: 30px;
                        }
                        input, .custom-select {
                            border: 1px solid #ac9969 !important;
                        }

                        input[type="checkbox"]::before{
                            width: 50px;
                            height: 50px;
                        }


                        /* The container */
                        .main {
                          display: block;
                          position: relative;
                          padding-left: 35px;
                          margin-bottom: 12px;
                          cursor: pointer;
                          font-size: 16px;
                          -webkit-user-select: none;
                          -moz-user-select: none;
                          -ms-user-select: none;
                          user-select: none;
                        }

                        /* Hide the browser's default checkbox */
                        .main input {
                          position: absolute;
                          opacity: 0;
                          cursor: pointer;
                          height: 0;
                          width: 0;
                        }

                        /* Create a custom checkbox */
                        .checkmark {
                            position: absolute;
                            top: 0;
                            left: 0;
                            height: 20px;
                            width: 20px;
                            background-color: #fff;
                            border-radius: 4px;
                            border: 1px solid #ac9969;
                            transition: 0.2s;
                        }

                        /* On mouse-over, add a grey background color */
                        .main:hover input ~ .checkmark {
                          background-color: #ccc;
                        }

                        /* When the checkbox is checked, add a blue background */
                        .main input:checked ~ .checkmark {
                          background-color: #ac9969;
                        }

                        /* Create the checkmark/indicator (hidden when not checked) */
                        .checkmark:after {
                          content: "";
                          position: absolute;
                          display: none;
                        }

                        /* Show the checkmark when checked */
                        .main input:checked ~ .checkmark:after {
                          display: block;
                        }

                        /* Style the checkmark/indicator */
                        .main .checkmark:after {
                            left: 6px;
                            top: 0px;
                            width: 7px;
                            height: 15px;
                            border: solid white;
                            border-width: 0 3px 3px 0;
                            -webkit-transform: rotate(45deg);
                            -ms-transform: rotate(45deg);
                            transform: rotate(45deg);
                            transition: 0.2s;
                        }

                    </style>
                    <h5 class="text-primary">Academic Program Application</h5>
                    <h6>
                        Application are <span class="font-weight-bold">20$</span> per student, payment is changed at the
                        end of the application process.
                    </h6>
                    <form role="form" action="/create/web_student" method="POST">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        <div class="border-title"></div>
                        <div class="form-group d-flex">
                            <label class="main mr-3">Mr
                              <input type="radio" value="Mr" name="gender" required="required" />
                              <span class="checkmark"></span>
                            </label>
                            <label class="main mr-3">Ms
                              <input type="radio" value="Ms" name="gender" required="required" />
                              <span class="checkmark"></span>
                            </label>
                            <label class="main">Mrs
                              <input type="radio" value="Mrs" name="gender" required="required" />
                              <span class="checkmark"></span>
                            </label>
                        </div>
                        <div class="row">
                            <div class="form-group col-5">
                                <label for="firstName">First Name:<sup>*</sup></label>
                                <input type="text" class="form-control" id="firstName" name="firstName" required="required"/>
                            </div>
                            <div class="form-group col-5">
                                <label for="lastName">Last Name:<sup>*</sup></label>
                                <input type="text" class="form-control" id="lastName" name="lastName" required="required"/>
                            </div>
                            <div class="form-group col-5">
                                <label for="nationality">Nationality:<sup>*</sup></label>
                                <select class="form-control custom-select" id="nationality" name="nationality" required="required">
                                  <option selected="" ></option>
                                  <option value="kh">Khmer</option>
                                  <option value="en">English</option>
                                </select>
                            </div>
                            <div class="form-group col-5">
                                <label for="birthDate">Birth Date:<sup>*</sup></label>
                                <input type="date" class="form-control" id="birthDate" name="birthDate" required="required"  />
                            </div>
                            <div class="form-group col-5">
                                <label for="email">Email:<sup>*</sup></label>
                                <input type="text" class="form-control" id="email" name="email" required="required" />
                            </div>
                            <div class="form-group col-5">
                                <label for="phone">Mobile Phone:<sup>*</sup></label>
                                <input type="text" class="form-control" id="phone" name="phone" required="required" />
                            </div>
                            <div class="form-group col-12">
                                <label for="current_address">Current Address:<sup>*</sup></label>
                                <input type="text" class="form-control" id="current_address" name="current_address" required="required"/>
                            </div>
                            <div class="form-group col-5">
                                <label for="city">City:<sup>*</sup></label>
                                <input type="text" class="form-control" id="city" name="city" required="required"/>
                            </div>
                            <div class="form-group col-5">
                                <label for="province">Province:<sup>*</sup></label>
                                <input type="text" class="form-control" id="province" name="province" required="required"/>
                            </div>
                            <div class="form-group col-2">
                                <label for="zip">Zip Code:</label>
                                <input type="text" class="form-control" id="zip" name="zip" />
                            </div>
                            <div class="form-group col-5">
                                <label for="country">Country:<sup>*</sup></label>
                                <select class="form-control custom-select" id="country" name="country" required="required">
                                    <option value="">Country...</option>
                                    <t t-foreach="countries" t-as="country">
                                        <option t-att-value="country['code']" ><t t-esc="country['name']"/></option>
                                    </t>
                                </select>
                            </div>
                        </div>
                        <h5 class="text-primary">Recent Education</h5>
                        <div class="border-title"></div>
                        <div class="row">
                            <div class="form-group col-5">
                                <label for="highest_education">Highest Qualification:</label>
                                <select class="form-control custom-select" id="highest_education" name="highest_education" >
                                    <option selected=""></option>
                                    <t t-foreach="educations" t-as="education">
                                        <option t-att-value="education['name']" ><t t-esc="education['name']"/></option>
                                    </t>
                                </select>
                            </div>
                            <div class="form-group col-7">
                                <label for="school_name">School Name:</label>
                                <input type="text" class="form-control" id="school_name" name="school_name" />
                            </div>
                        </div>
                        <h5 class="text-primary">Recent Professional Experience</h5>
                        <div class="border-title"></div>
                        <div class="row">
                            <div class="form-group col-12">
                                <label for="experience_detail">Experience Details:</label>
                                <input type="text" class="form-control" id="experience_detail" name="experience_detail" />
                            </div>
                            <div class="form-group col-6">
                                <label for="company">Company:</label>
                                <input type="text" class="form-control" id="company" name="company" />
                            </div>
                            <div class="form-group col-6">
                                <label for="positionHeld">Position Held:</label>
                                <input type="text" class="form-control" id="position_held" name="position_held" />
                            </div>
                        </div>
                        <h5 class="text-primary">How did you hear about us?</h5>
                        <div class="border-title"></div>
                        <div class="row">
                            <div class="form-group col-4">
                                <label class="main">Internet/Website
                                  <input type="checkbox" value="Internet" name="s_internet" />
                                  <span class="checkmark"></span>
                                </label>
                            </div>
                            <div class="form-group col-4">
                                <label class="main">Education Fair
                                  <input type="checkbox" value="Education" name="s_education" />
                                  <span class="checkmark"></span>
                                </label>
                            </div>
                            <div class="form-group col-4">
                                <label class="main">School Counselor
                                  <input type="checkbox" value="School Counselor" name="s_school" />
                                  <span class="checkmark"></span>
                                </label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-4">
                                <label class="main">Advertising Article
                                  <input type="checkbox" value="Advertising Article" name="s_advertise" />
                                  <span class="checkmark"></span>
                                </label>
                            </div>
                            <div class="form-group col-4">
                                <label class="main">Culinary Fair
                                  <input type="checkbox" value="Culinary Fair" name="s_culinary" />
                                  <span class="checkmark"></span>
                                </label>
                            </div>
                            <div class="form-group col-4">
                                <label class="main">Friend's Recommendation
                                  <input type="checkbox" value="Friend's Recommendation" name="s_friend" />
                                  <span class="checkmark"></span>
                                </label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-12 d-flex">
                                <label class="main">Others, please specify:
                                  <input type="checkbox" value="Others, please specify:" name="s_other" />
                                  <span class="checkmark"></span>
                                </label>
                                <input type="text" class="form-control col-3 ml-2 mb-2" id="s_specify" name="s_specify" />
                            </div>
                        </div>
                        <h5 class="text-primary">Payment</h5>
                        <div class="border-title"></div>
                        <h6>We charge an application fee of $20,  please choose your payment options below:</h6>
                        <div class="row mt-2">
                            <div class="form-check">
                              <input class="form-check-input ml-1" type="radio" name="p_with_card" id="p_with_card" value="Pay with Credit Card" />
                              <label class="form-check-label mr-5 pl-4" for="credit">Pay with Credit Card</label>
                            </div>
                            <div class="form-check">
                              <input class="form-check-input" type="radio" name="p_later" id="p_later" value="Pay Later" />
                              <label class="form-check-label" for="later">Pay Later</label>
                            </div>
                        </div>
                        <div class="border-title"></div>
                        <div class="d-flex justify-content-end">
                        <button type="submit" class="mt-3 btn btn-primary mr-4" style="font-size:17px; color: white;">Back</button>
                        <button class="mt-3 btn btn-primary" style="font-size:17px; color: white;">Next</button>
                    </div>
                    </form>
               </div>
           </t>
        </template>

    </data>
</odoo>