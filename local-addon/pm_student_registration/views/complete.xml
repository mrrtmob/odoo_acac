<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
       <template id="complete">
           <title>Student Registration</title>
           <t t-call="web.html_container">
                <div class="page py-5" style="font-family:'Roboto';">
                    <style>
                        .border-title {
                            width: 100%;
                            height: 1px;
                            background: #ac9969;
                            margin-top: 15px;
                            margin-bottom: 30px;
                        }
                        .text-primary {
                            color: #ac9969 !important;
                        }
                        .bg-primary {
                            background: #ac9969 !important;
                        }
                        .icon {
                            width: 70px;
                            height: 70px;
                            border-radius: 50%;
                            background: #ac9969;
                        }
                        .btn {
                            font-size: 17px !important;
                            color: white !important;
                            padding: 0.8rem 2rem !important;
                            border-radius: 10px !important;
                            font-weight: bold !important;
                            background-color: #ac9969 !important;
                            border-color: #ac9969 !important;
                        }
                    </style>
                    <h3 class="text-primary text-center" style="font-family: 'Montserrat';">Application Complete</h3>
                    <div class="border-title"></div>
                    <div class="d-flex justify-content-center">
                        <div class="icon mr-4 d-flex align-items-center justify-content-center">
                            <img src="/pm_student_registration/static/src/img/utensils.png" />
                        </div>
                        <div class="icon mr-4 d-flex align-items-center justify-content-center">
                            <img src="/pm_student_registration/static/src/img/hat-chef.png" />
                        </div>
                        <div class="icon d-flex align-items-center justify-content-center">
                            <img src="/pm_student_registration/static/src/img/knife-kitchen.png" />
                        </div>
                    </div>
                    <div class="text-center mt-4">
                        <h4 class="text-primary text-center font-weight-bold mb-3" style="font-family: 'Montserrat';">Congratulations, and Good Luck!</h4>
                        <p>Application confirmed, you will receive an acknowledgement email shortly.</p>
                        <button class="mt-3 btn btn-primary" style="font-size:17px; color: white;">Back to Home</button>
                    </div>
               </div>
           </t>
        </template>
    </data>
</odoo>