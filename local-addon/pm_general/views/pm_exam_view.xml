        <record id="custom_view_op_mark_sheet_register_form" model="ir.ui.view">
            <field name="name">op.marksheet.register.form.custom</field>
            <field name="model">op.marksheet.register</field>
            <field name="inherit_id" ref="openeducat_exam.view_op_marksheet_register_form"/>
