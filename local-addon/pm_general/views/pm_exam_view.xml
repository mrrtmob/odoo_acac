         <record id="view_pm_result_template_inherited_search" model="ir.ui.view">
            <field name="name">pm.result.template.inherited.search</field>
            <field name="model">op.result.template</field>
            <field name="inherit_id" ref="openeducat_exam_enterprise.view_op_result_template_inherited_search"/>
            <field name="arch" type="xml">
                <xpath expr="//searchpanel" position="replace">
                    <searchpanel>
                           <field name="batch_id" icon="fa fa-book"/>
                    </searchpanel>
                </xpath>
            </field>
        </record>


        <record id="view_pm_exam_session_dashboard_inherit" model="ir.ui.view">
            <field name="name">pm.exam.session.inherit.kanban.custom</field>
            <field name="model">op.exam.session</field>
            <field name="inherit_id" ref="openeducat_exam_enterprise.exam_view_kanban"/>
            <field name="arch" type="xml">

                <kanban position="attributes">
                    <attribute name="group_create">false</attribute>
                </kanban>



               <xpath expr="//div[hasclass('o_kanban_card_header')]" position="replace">
                    <div class="o_kanban_card_header_title">
                        <div class="o_primary">
                            <a type="edit" class="mr-auto">
                                <field name="subject_id"/>
                            </a>
                        </div>
                        <div class="o_secondary mb16">
                            <a>
                                <field name="exam_code"/>
                            </a>
                           <field name="state" string="Status" widget="label_selection"
                             options="{'classes': {'draft': 'primary', 'done': 'success', 'submitted': 'warning', 'cancel': 'danger'}}"/>
                        </div>
                    </div>
                </xpath>

                <xpath expr="//div[@name='bottom-div']" position="replace">
                        <div class="row mt10" >
                            <div class="col-6 border-right">
                                <h3 >
                                    <a name="%(act_open_exams_dashboard)d" type="action">
                                        <field name="exam_count"/> Exams
                                    </a>
                                </h3>
                            </div>

                            <div class="col-6">
                                <h3>
                                    <a name="%(act_open_class_exams_dashboard)d"
                                       type="action">
                                       <field name="class_exam_count"/> Class Exams
                                    </a>
                                </h3>
                            </div>
                        </div>
                </xpath>
            </field>
        </record>

        <record id="pm_exam_dashboard_kanban_view" model="ir.ui.view">
            <field name="name">pm.exam.dashboard.kanban</field>
            <field name="model">op.exam</field>
            <field name="arch" type="xml">
                <kanban create="true" class="oe_background_grey o_kanban_dashboard o_account_kanban"
                        banner_route="/openeducat_core_enterprise/openeducat_core_enterprise_onboarding_panel">
                    <field name="id"/>
                    <field name="name"/>
                    <templates>
                        <t t-name="kanban-box">
                         <div style="width:306px;" t-attf-class="oe_kanban_global_click">
                                <div t-attf-class="o_kanban_card_header">
                                    <div class="o_kanban_card_header_title">
                                        <div class="o_primary">
                                            <a type="edit" class="mr-auto">
                                                <field name="name"/>
                                            </a>
                                        </div>
                                         <div class="o_secondary mb16">
                                            <a>
                                                <field name="exam_type"/>
                                            </a>
                                           <field name="state" string="Status" widget="label_selection"
                                             options="{'classes': {'quiz': 'primary',
                                             'written': 'secondary', 'practical': 'secondary',
                                             'assignment': 'primary', 'portfolio': 'primary',
                                             'mid_term': 'warning', 'open_book_exam': 'info',
                                             'presentation': 'info', 'final_exam': 'success',
                                             'Practical comprehensive Exam': 'info',  're-sit': 'danger'}}"/>
                                        </div>
                                    </div>

                                </div>
                                <div class="container o_kanban_card_content">
                                    <div class="row col-md-12" style="padding-right:0px;">
                                         <div class="col-6 text-center">
                                             <b>Weight <field name="grade_weightage"/>%</b>
                                         </div>
                                         <div class="col-6 text-center">
                                            <a name="%(act_open_class_exams_dashboard_exam)d" type="action">
                                                <b><field name="class_exam_count"/> Class Exams</b>
                                            </a>
                                        </div>

                                </div>
                                </div>
                         </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="pm_class_exam_dashban_kanban_view" model="ir.ui.view">
            <field name="name">Class Exam Kanban</field>
            <field name="model">pm.class.exam</field>
            <field name="arch" type="xml">
                  <kanban create="true" class="oe_background_grey o_kanban_dashboard o_account_kanban">
                    <field name="id"/>
                    <field name="name"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div style="width:250px;" t-attf-class="oe_kanban_global_click">
                                <div t-attf-class="o_kanban_card_header">
                                    <div class="o_kanban_card_header_title">
                                        <div class="o_primary">
                                           <h3><a type="edit" class="mr-auto">
                                                <field name="exam_id"/>
                                            </a>
                                            </h3>
                                        </div>
                                        <div class="o_secondary">
                                            <a>
                                                <field name="class_id"/>
                                            </a>
                                        </div>
                                    </div>

                                </div>
                                <div class="container o_kanban_card_content">
                                        <br/>
                                    <div class="row col-md-12" style="padding-right:0px;">

                                        <div name="first_column" class="col-md-6 o_kanban_primary_left">

                                                    <span><field name="absence_count"/> Absence</span>
                                        </div>
                                        <div name="third_column" class="col-md-6 o_kanban_primary_right">
                                            <span><field name="present_count"/> Present</span>

                                         </div>
                                           <span>
                                               <field name="state" string="Status" widget="label_selection"
                                                 options="{'classes': {'draft': 'primary',
                                                 'done': 'success', 'cancel': 'danger',
                                                 'schedule': 'info',
                                                 }}"/>
                                           </span>
                                </div>
                            </div>

                            </div>

                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="openeducat_exam.act_open_op_exam_session_view" model="ir.actions.act_window">
            <field name="context">{}</field>
        </record>
        <record id="openeducat_exam_enterprise.exam_dashboard_act" model="ir.actions.act_window">
            <field name="context">{'search_default_current':1, 'search_default_group_by_semester': 1}</field>
        </record>

        <record id="openeducat_exam.act_open_op_exam_view" model="ir.actions.act_window">
             <field name="context">{'search_default_current':1, 'search_default_group_by_exam_subject_id': 1}</field>
        </record>



    </data>
