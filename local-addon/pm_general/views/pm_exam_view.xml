<odoo>
    <data>


          <record model="ir.actions.act_window" id="act_open_exams_dashboard">
            <field name="name">Exams</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">op.exam</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="search_view_id" ref="openeducat_exam.view_op_exam_search"/>
            <field name="domain">[('session_id','in',[active_id])]</field>
        </record>

          <record model="ir.actions.act_window" id="act_open_class_exams_dashboard">
            <field name="name">Class Exams</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pm.class.exam</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">kanban,tree,form</field>
<!--            <field name="search_view_id" ref="view_pm_class_exam_search"/>-->
            <field name="domain">[('exam_session_id','in',[active_id])]</field>
        </record>

          <record model="ir.actions.act_window" id="act_open_class_exams_dashboard_exam">
            <field name="name">Class Exams</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pm.class.exam</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">kanban,tree,form</field>
<!--            <field name="search_view_id" ref="view_pm_class_exam_search"/>-->
            <field name="domain">[('exam_id','in',[active_id])]</field>
        </record>


        <record id="custom_view_op_marksheet_line_form" model="ir.ui.view">
            <field name="name">op.marksheet.line.form.custom</field>
            <field name="model">op.marksheet.line</field>
            <field name="inherit_id" ref="openeducat_exam.view_op_marksheet_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet" position="replace">
                    <sheet>
                        <group colspan="4" col="4">
                            <field name="student_id"/>
                            <field name="grade"/>
                            <field name="status"/>
                            <field name="result"/>
                        </group>
                         <group string="Results">
                            <field name="result_line" colspan="4" readonly="1" nolabel="1">
                                <tree string="Exams" decoration-danger="status=='fail'">
                                    <field name="student_id"/>
                                    <field name="exam_id"/>
                                    <field name="grade_weightage"/>
                                    <field name="marks"/>
                                    <field name="status"/>
                                </tree>
                            </field>
                          </group>
                      </sheet>
                </xpath>
            </field>
        </record>

        <record id="custom_view_op_marksheet_line_tree" model="ir.ui.view">
            <field name="name">op.marksheet.line.tree.custom</field>
            <field name="model">op.marksheet.line</field>
            <field name="inherit_id" ref="openeducat_exam.view_op_marksheet_line_tree"/>
            <field name="arch" type="xml">


                <xpath expr="//tree" position="attributes">
                     <attribute name="create">false</attribute>
                </xpath>
                 <xpath expr="//field[@name='percentage']" position="replace">
                    <field name="result" />
                </xpath>

            </field>
        </record>

        <record id="custom_view_op_marksheet_register_tree" model="ir.ui.view">
            <field name="name">op.marksheet.register.tree.custom</field>
            <field name="model">op.marksheet.register</field>
            <field name="inherit_id" ref="openeducat_exam.view_op_marksheet_register_tree"/>
            <field name="arch" type="xml">
                 <xpath expr="//tree" position="attributes">
                     <attribute name="create">false</attribute>
                </xpath>
                 <xpath expr="//tree" position="attributes">
                    <attribute name="string">Subject Results</attribute>
                </xpath>
                 <xpath expr="//field[@name='state']" position="attributes">
                     <attribute name="invisible">1</attribute>
                </xpath>
                 <xpath expr="//field[@name='name']" position="after">
                     <field name="state" widget="label_selection" options="{'classes': {'draft': 'primary', 'validated': 'success','cancelled': 'danger'}}"/>
                </xpath>
            </field>
        </record>

         <record id="custom_exam_session_tree" model="ir.ui.view">
            <field name="name">custom.op.exam.session.tree</field>
            <field name="model">op.exam.session</field>
            <field name="inherit_id" ref="openeducat_exam.view_op_exam_session_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="string">Exam Schedules</attribute>
                </xpath>
                <xpath expr="//field[@name='name']" position="after">
                    <field name="subject_id" />
                </xpath>
                <xpath expr="//field[@name='batch_id']" position="after">
                    <field name="semester_id" />
                </xpath>
                <xpath expr="//field[@name='exam_type']" position="attributes">
                     <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='exam_code']" position="attributes">
                     <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='evaluation_type']" position="attributes">
                     <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='company_id']" position="attributes">
                     <attribute name="invisible">1</attribute>
                </xpath> <xpath expr="//field[@name='venue']" position="attributes">
                     <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

        <record id="custom_view_op_exam_form" model="ir.ui.view">
            <field name="name">custom.op.exam.form</field>
            <field name="model">op.exam</field>
            <field name="inherit_id" ref="openeducat_exam.view_op_exam_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='subject_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                    <attribute name="force_save">1</attribute>
                </xpath>

                <xpath expr="//field[@name='subject_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                    <attribute name="force_save">1</attribute>
                </xpath>
                <xpath expr="//field[@name='exam_code']" position="before">
                    <field name="exam_type"/>
                    <field name="grade_weightage"/>
                </xpath>

                 <xpath expr="//field[@name='start_time']" position="attributes">
                      <attribute name="invisible">1</attribute>
                </xpath>

                 <xpath expr="//field[@name='end_time']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                 <xpath expr="//field[@name='exam_code']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                 <xpath expr="//form//header" position="attributes">
                     <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='attendees_line']" position="after">
                     <field name="class_exam_ids" colspan="4"  nolabel="1">
                        <tree string="Attendees and Class Exams">
                            <field name="name"/>
                            <field name="class_id"/>
                            <field name="start_time"/>
                            <field name="end_time"/>
                        </tree>
                    </field>
                </xpath>
            </field>
        </record>
        <record id="custom_view_op_exam_session_form" model="ir.ui.view">
            <field name="name">custom.op.exam.session.form</field>
            <field name="model">op.exam.session</field>
            <field name="inherit_id" ref="openeducat_exam.view_op_exam_session_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form//header" position="replace">
                   <header groups="base.group_user">
                        <button name="act_draft" states="schedule,cancel" type="object"
                                string="Draft" class="oe_highlight"/>
                        <button name="act_schedule" states="draft" type="object"
                                string="Schedule" class="oe_highlight"/>
                        <button name="act_submitted" states="schedule" type="object"
                                string="Submitted" class="oe_highlight"/>
                        <button name="act_done" states="submitted" type="object"
                                string="Done" class="oe_highlight"/>
                        <button name="act_cancel" states="schedule" type="object"
                                string="Cancel"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,scheduled,submitted,done"/>
                    </header>
                </xpath>

                <xpath expr="//form/sheet" position="replace">
                    <sheet>
                    <field name="active" invisible="1"/>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                            attrs="{'invisible': [('active', '=', True)]}"/>
                     <group>
                            <h1>
                                <field name="name"/>
                            </h1>
                     </group>
                        <group colspan="4" col="4">
                            <field name="faculty_id" />
                            <field name="course_id"/>
                            <field name="batch_id" context="{'course_id': course_id,'get_parent_batch':1}"/>
                            <field name="semester_id"  context="{'batch_id': batch_id,'get_parent_semester':1}"/>
                            <field name="subject_id"  context="{'semester_id': semester_id,'get_parent_subject':1}"/>
                            <field name="exam_code"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="is_resit"/>
                        </group>
                         <group string="Exam(s)">
                            <field name="exam_ids" colspan="4"  nolabel="1">
                                <tree string="Exam" editable="top">
                                    <field name="exam_type"/>
                                    <field name="name" readonly="1" force_save="1"/>
                                    <field name="grade_weightage"/>
                                    <field name="total_marks"/>
                                    <field name="min_marks"/>
                                </tree>
                            </field>
                        </group>
                      </sheet>
                </xpath>
            </field>
        </record>

         <record id="view_pm_semester_result_template_form" model="ir.ui.view">
            <field name="name">pm.semester.result.template.form</field>
            <field name="model">pm.semester.result.template</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Result Template">
                    <header groups="openeducat_core.group_op_back_office_admin,openeducat_core.group_op_back_office">
                        <button string="Generate Semester Result" type="object" states="draft" name="generate_semester_result"
                                class="oe_highlight"/>

                        <button
                            name="button_draft"
                            string="Reset"
                            type="object"
                            states="result_generated"
                        />
                        <field name="state" widget="statusbar" statusbar_visible="draft,result_generated"/>

                    </header>
                     <sheet>
                        <field name="active" invisible="1"/>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                                attrs="{'invisible': [('active', '=', True)]}"/>
                       <widget name="web_ribbon" title="Draft" bg_color="bg-primary"
                               attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <widget name="web_ribbon" title="Generated" bg_color="bg-success"
                                attrs="{'invisible': [('state', '!=', 'result_generated')]}"/>
                        <group>
                                <h1>
                                    <field name="name"/>
                                </h1>
                         </group>
                        <group colspan="4" col="4">
                            <field name="result_date"/>
                            <field name="course_id"/>
                            <field name="batch_id" context="{'course_id': course_id,'get_parent_batch':1}"/>
                            <field name="semester_id" context="{'batch_id': batch_id,'get_parent_semester':1}"/>
                        </group>
                      </sheet>
                      <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

         <record id="view_pm_final_result_template_form" model="ir.ui.view">
            <field name="name">pm.final.result.template.form</field>
            <field name="model">pm.final.result.template</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Result Template">
                    <header groups="openeducat_core.group_op_back_office_admin,openeducat_core.group_op_back_office">
                        <button string="Generate Semester Result" type="object" states="draft" name="generate_final_result"
                                class="oe_highlight"/>

                        <button
                            name="button_draft"
                            string="Reset"
                            type="object"
                            states="result_generated"
                        />
                        <field name="state" widget="statusbar" statusbar_visible="draft,result_generated"/>

                    </header>
                     <sheet>
                        <field name="active" invisible="1"/>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                                attrs="{'invisible': [('active', '=', True)]}"/>
                       <widget name="web_ribbon" title="Draft" bg_color="bg-primary"
                               attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <widget name="web_ribbon" title="Generated" bg_color="bg-success"
                                attrs="{'invisible': [('state', '!=', 'result_generated')]}"/>
                        <group>
                                <h1>
                                    <field name="name"/>
                                </h1>
                         </group>
                        <group colspan="4" col="4">
                            <field name="course_id"/>
                            <field name="batch_id" context="{'course_id': course_id,'get_parent_batch':1}"/>
                            <field name="result_date"/>
                        </group>
                      </sheet>
                      <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

          <record id="view_op_semester_result_template_search" model="ir.ui.view">
            <field name="name">pm.marksheet.register.search</field>
            <field name="model">op.marksheet.register</field>
             <field name="inherit_id" ref="openeducat_exam.view_op_marksheet_register_search"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                 <xpath expr="." position="inside">
                      <searchpanel>
                           <field name="semester_id" string="Semesters" icon="fa fa-book"/>
                       </searchpanel>
                </xpath>
            </field>
        </record>

          <record id="view_pm_semester_result_template_search" model="ir.ui.view">
            <field name="name">pm.semester.result.template.search</field>
            <field name="model">pm.semester.result.template</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search>
                    <filter string="Archived" name="inactive"
                            domain="[('active', '=', False)]"/>
                    <newline/>
                    <group expand="0" string="Group By...">
                        <filter string="State" name="group_by_result_state"
                                domain="[]" context="{'group_by':'state'}"/>
                        <filter string="Semester" name="group_by_semester"
                                domain="[]" context="{'group_by':'semester_id'}"/>
                        <filter string="Term" name="group_by_batch"
                                domain="[]" context="{'group_by':'batch_id'}"/>
                        <filter string="Course" name="group_by_course"
                                domain="[]" context="{'group_by':'course_id'}"/>
                    </group>
                     <searchpanel>
                           <field name="batch_id" string="Term" icon="fa fa-book"/>
                       </searchpanel>
                </search>
            </field>
        </record>



          <record model="ir.actions.act_window" id="act_open_final_result_template_view">
                <field name="name">Final Result Template</field>
                <field name="type">ir.actions.act_window</field>
                <field name="res_model">pm.final.result.template</field>
                <field name="binding_view_types">form</field>
                <field name="view_mode">tree,form</field>
                <field name="domain">[]</field>
                <field name="context">{}</field>
        </record>


          <record id="view_pm_semester_result_template_tree" model="ir.ui.view">
            <field name="name">pm.semester.result.tree</field>
            <field name="model">pm.semester.result.template</field>
